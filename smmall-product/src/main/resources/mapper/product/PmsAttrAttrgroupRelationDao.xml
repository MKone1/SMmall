<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yxl.smmall.product.dao.PmsAttrAttrgroupRelationDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.yxl.smmall.product.entity.PmsAttrAttrgroupRelationEntity" id="pmsAttrAttrgroupRelationMap">
        <result property="id" column="id"/>
        <result property="attrId" column="attr_id"/>
        <result property="attrGroupId" column="attr_group_id"/>
        <result property="attrSort" column="attr_sort"/>
    </resultMap>
    <insert id="insertAttrGroup">
        INSERT INTO pms_attr_attrgroup_relation ( attr_id,attr_group_id ) VALUES (#{attrId},#{attrGroupId} )
    </insert>
    <delete id="deleteBatchRelation">
        DELETE from pms_attr_attrgroup_relation WHERE
        <foreach collection="collect" item="item" separator=" OR ">
            (attr_id = #{item.attrId} AND attr_group_id=#{item.attrGroupId})
        </foreach>
    </delete>

</mapper>